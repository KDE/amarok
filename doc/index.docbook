<sect1 id="toolbar"><title>Toolbar</title> 
<sect2 id="introduction"><title>Introduction</title> 
<para>
<screenshot>
<screeninfo></screeninfo>
  <mediaobject>
    <imageobject>
      <imagedata fileref="amarok2-6viewconfigmenu.png" format="PNG"/>
    </imageobject>
